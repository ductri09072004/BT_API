apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: bt-api-ingress
  namespace: bt-api
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
spec:
  rules:
  - host: bt-api.local
    http:
      paths:
  - host: order.bt-api.local
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: order-service
            port:
              number: 8000

